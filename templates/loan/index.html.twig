{% extends 'base.html.twig' %}

{% block title %}Loan index
{% endblock %}

{% block body %}
	<style>
		body {
			background-color: #70A99E;
		}
		.responsive {
			width: 100%;
			height: auto;
		}
	</style>


	<h1>Empruntes</h1>

	<table class="table" id="lstindex">
		<thead>
			<tr class="table-warning">

				<th>User</th>
				<th>CreatedAt</th>
				<th>UdatedAt</th>
				<th>Status</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>


			{% for loan in loans %}
				<tr
					class="table-warning">

					{#<td>{{ loan.id }}</td>#}
					<td>
						<a href="{{path('user_show', {'id':loan.user.id} )}}">
							{{loan.user.firstname}}
						</a>
					</td>
					<td>{{ loan.createdAt ? loan.createdAt|date('Y-m-d H:i:s') : '' }}
					</td>
					<td>{{ loan.udatedAt ? loan.udatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ loan.status ? 'Yes' : 'No' }}</td>


					<td>
						<a class="btn btn-primary" href="{{ path('loan_show', {'id': loan.id}) }}">show</a>
						<a class="btn btn-success" href="{{ path('loan_edit', {'id': loan.id}) }}">edit</a>

					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
{% block javascripts %}
	<script>
		{% include "filter/_filters.js" %}</script>

</script>{% endblock %}
